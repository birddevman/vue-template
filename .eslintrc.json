{
    "env": {
        "browser": true,
        "node": true
    },

    "extends": [
        "plugin:vue/vue3-strongly-recommended",
        "eslint:recommended"
    ],

    "parserOptions": {
        "parser": "babel-eslint"
    },

    "rules": {
        "vue/html-closing-bracket-newline": ["error", {
            "singleline": "never",
            "multiline": "never"
        }],

        "vue/html-self-closing": ["error", {
            "html": {
                "void": "always"  ,
                "normal": "never"
            }
            
        }],

        "vue/html-closing-bracket-spacing": ["error", {
            
            "selfClosingTag": "never"
            
          }]
    }
}